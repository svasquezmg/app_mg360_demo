<div class="row">
    <div class="col-xl-12">
        <div class="row">
            <div class="col-xl-12">

                <div class="tab-content" id="myTabContent1">
                    <div class="tab-pane show active p-0 border-0" id="pricing-monthly1-pane"
                         role="tabpanel" aria-labelledby="pricing-monthly1" tabindex="0">
                        <div class="row justify-content-center">
                            @foreach (System.Data.DataRow row in permisos_usuario.Rows)
                            {
                                if (!string.IsNullOrEmpty(row["MenuPrincipal"].ToString()) && row["MenuBotonVisible"].ToString() == "1")
                                {
                                    <div class="col-xxl-3 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="custom-card  border border-light rounded card">
                                            <div class="d-flex flex-column p-0">
                                                <a href="~/@row["formulario"].ToString()" class="card-body p-0">
                                                    <div class="p-4">
                                                        <div class="mb-1 text-muted" style="text-align:center">
                                                            <img src="~/assets/images/@row["formularioImagen"].ToString()" style="width:90px" />
                                                        </div>
                                                        <div style="text-align:center">
                                                            <div>
                                                                <div class="fs-18 fw-semibold">
                                                                    @row["formularioNombre"].ToString()
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
